<%- include('../partition/header.ejs') %>

<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">EDIT Student</h1>
                    <form action="/student/update/<%=d._id %>" method="post">
                        <div class="form-group">
                            <input type="text"  name="name" class="form-control" placeholder="Name" value="<%=d.name %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="age" class="form-control" placeholder="Age" value="<%=d.age %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="fees" class="form-control" placeholder="Fees" value="<%=d.fees %>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>


