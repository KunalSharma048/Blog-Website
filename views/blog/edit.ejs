<%- include('../partition/header.ejs') %>

<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">UPDATE BLOG</h1>
                    <form action="/blog/update/<%=data._id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Name" value="<%=data.title %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="description" class="form-control" value="<%=data.description %>">
                        </div>
                        
                        <div class="form-group">
                            <button class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>


