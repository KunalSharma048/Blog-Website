<%- include('../partition/header.ejs') %>

<section class="login-wrap mtb-40">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h1 class="alert alert-success text-center">Create Account</h1>
                    <form action="/user/insert" method="post">
                        <%if(message.length > 0){ %>
                            <div class="alert alert-danger">
                                <%=message %>
                            </div>
                        <% }%>
                        <div class="form-group">
                            <label for="username" class="col-md-3 control-label">User Name</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" name="username" placeholder="Enter Your User Name" required>
                            </div>
                        </div>
                        <div class="form-group">
                              <label for="email" class="col-md-3 control-label">Email</label>
                              <div class="col-md-9">
                                  <input type="text" class="form-control" name="email" placeholder="Enter Your Email" required>
                              </div>
                          </div>
                          
                        <div class="form-group">
                            <label for="password" class="col-md-3 control-label">Password</label>
                            <div class="col-md-9">
                                <input type="password" class="form-control" name="password" placeholder="Enteryour password" required>
                            </div>
                        </div>
                        <div class="form-group">
                              <label for="confpassword" class="col-md-3 control-label">Confirm Password</label>
                              <div class="col-md-9">
                                  <input type="password" class="form-control" name="password_confirmation" placeholder="Enteryour Confirm Password" required>
                              </div>
                          </div>
                        <div class="form-group">
                            <!-- Button -->                                        
                            <div class="col-md-offset-3 col-md-9">
                            <input type="submit" name="submit" value="Signup" class="btn btn-primary">   
                            </div>
                        </div>
                        
                        <p>Already have account? <a href="/login">Login Here</a></p>
                    </form>
                </div>         
            </div>
        </div>
    </div>
</section>


<%- include('../partition/footer.ejs') %>